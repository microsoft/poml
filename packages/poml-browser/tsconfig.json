{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ES2022",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "..",
    "jsx": "react-jsx",
    "types": ["chrome-types"],
    "baseUrl": "..",
    "paths": {
      "@functions/*": ["poml-browser/functions/*"],
      "@ui/*": ["poml-browser/ui/*"],
      "@background/*": ["poml-browser/background/*"],
      "@contentScript/*": ["poml-browser/contentScript/*"]
    },
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "dist"]
}
